<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.areef.asrapro">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.areef.asrapro.NotificationActivity"></activity>
        <activity android:name="com.areef.asrapro.SearchActivity" />
        <activity android:name="com.areef.asrapro.UpdateUserInfoActivity" />
        <activity
            android:name="com.areef.asrapro.OTPverificationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.areef.asrapro.MyAddressesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.areef.asrapro.AddAddressActivity"
            android:screenOrientation="portrait"
            android:theme="@style/RedProgressbar" />
        <activity
            android:name="com.areef.asrapro.DeliveryActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.areef.asrapro.ViewAllActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.areef.asrapro.OrderDetailsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.areef.asrapro.ProductDetailsActivity"
            android:screenOrientation="portrait" />
        <activity android:name="com.areef.asrapro.CategoryActivity" />
        <activity
            android:name="com.areef.asrapro.MainActivity"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.areef.asrapro.RegisterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.areef.asrapro.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.paytm.pgsdk.PaytmPGActivity"
            android:configChanges="keyboardHidden|orientation|keyboard"
            android:screenOrientation="portrait"
            android:theme="@style/PaytmTheme"
            tools:replace="android:theme" />
    </application>

</manifest>